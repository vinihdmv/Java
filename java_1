package aplicacao;

import java.util.Locale;

public class Programa {

	public static void main(String[] arg) {
		String product1 = "Computer";
		String product2 = "Office desk";
				
		int age = 30;
			int code = 5290;
			char gender = 'F';
				
			double price1 = 2100.0;
			double price2 = 650.0;
			double measure = 53.234567;
			
	
			System.out.printf("Mesa de escritório, cujo preço e:%2f\n",price1);
			System.out.printf("O preco do computadorn é %2f\n",price1);
			System.out.printf("O preco do computadorn é %2f\n",price2);
			System.out.printf("A idade: %d codigo %d e genero: %s\n",age,code,gender);
			System.out.printf("Media de 8 casa decimais:%.8f\n",measure);
			System.out.printf("cercado com 3 casas decimais:%.3f\n",measure);
			Locale.setDefault(Locale.US);
			System.out.printf("ponto decimal dos eua:%.3f",measure);
	}

	
}


